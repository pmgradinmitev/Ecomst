@model List<Category>
<a asp-controller="Category" asp-action="Upsert" class="btn btn-primary mx-2">Add Category</a>
<h1>Category List</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <form method="post" action="@Url.Action("Delete", "Category")" onsubmit="return confirm('Do you really want to delete category @obj.Name');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="@nameof(obj.Id)" value="@obj.Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bg-info bi-trash"></i>Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>